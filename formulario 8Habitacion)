    private void ListarDatos() {
       	
       ConexionBD conexion = new ConexionBD();
        
        try{
            
            String consulta = "SELECT * FROM HABITACION";
            Connection con = conexion.conectar();
            Statement cn = con.createStatement();
            ResultSet res = cn.executeQuery(consulta);
            
            DefaultTableModel modelo = new DefaultTableModel();
            
            ResultSetMetaData metaData = res.getMetaData();
            int numeroColumnas = metaData.getColumnCount();
            for( int i = 1; i <= numeroColumnas; i++ ) {
                modelo.addColumn(metaData.getColumnName(i));
            }
            
            while(res.next()) {
                Object[] fila = new Object[numeroColumnas];
                for( int i = 1; i <= numeroColumnas; i++ ) {
                        fila[(i - 1)] = res.getObject(i);
                }
                modelo.addRow(fila);
            }

            tableHabitacion.setModel(modelo);
            
        } catch(Exception e){
            System.out.println(e.toString());
        }
    }
    
    private void RegistrarDatos() {
       	ConexionBD conexion = new ConexionBD();
        try{ 
            // Recopilar informaci贸n del formulario y asignarla al objeto
            vHabitacion dts = new vHabitacion();
            Connection con = conexion.conectar();
            // Recopilar informaci贸n del formulario        
            dts.setNombre(cboTipoHabitacion.getSelectedItem().toString());
            dts.setNumero(txtNhabitacion.getText());
            double precio = Double.parseDouble(txtPrecio.getText());
            dts.setPrecio(precio);
            dts.setPiso(txtPiso.getText());
            dts.setDescripcion(txtDescripcion.getText()); 
            dts.setEstado(cboestado.getSelectedItem().toString());
            String consulta = "";
            String mensaje = "";

            // Consulta SQL para registrar los datos en la TABLA USUARIOS
            consulta = "INSERT INTO HABITACION (nombre, numero, precio, piso, descripcion, estado)" + "VALUES (?,?,?,?,?,?)" ;
            
             // Preparar la consulta
            PreparedStatement pstmt = con.prepareStatement(consulta);
            pstmt.setString(1, dts.getNombre());
            pstmt.setString(2, dts.getNumero());
            pstmt.setDouble(3, dts.getPrecio());
            pstmt.setString(4, dts.getPiso());
            pstmt.setString(5, dts.getDescripcion());
            pstmt.setString(6, dts.getEstado());
        
            // Ejecutar la consulta
            pstmt.executeUpdate();
            
            mensaje = "Usuario Registrado!!";
             ListarDatos();

            System.out.println(mensaje);
        } catch(Exception e){
            System.out.println(e.toString());
        } 
    }


